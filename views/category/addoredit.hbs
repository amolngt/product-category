<div class="col-md-6 col-md-offset-3"> 
<h3><a href="/">All Categories</a></h3>
{{> messages }}
{{#if data}}
<h3>Edit Category</h3>
{{#each data}}
<form action="/category/update" method="post">
<input type="hidden" value="{{this._id}}" name="catid">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" name="name" id="name" value="{{this.name}}">
    </div>
    <div class="form-group">
        <label for="name">Description:</label>
        <textarea class="form-control" name="description" id="description" value="">{{this.description}}</textarea>
    </div>
    <button class="btn btn-primary">Update</button>
</form>
{{/each}}
{{else}}
<h3>Add Category</h3>
<form action="/category/add" method="post">
 <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" name="name" id="name" value="">
    </div>
    <div class="form-group">
        <label for="name">Description:</label>
          <textarea class="form-control" name="description" id="description" value=""></textarea>
    </div>
  
    <button class="btn btn-primary">Add</button>
</form>
{{/if}}
</div>