<div class="col-md-6 col-md-offset-3"> 
    {{#each data}}
<h3><a href="/">All Product to {{this.name}} Category</a></h3>
{{/each}}
{{> messages }}
{{#each data}}
{{#if this.addproduct}}
<h3>Add Product</h3>
<form action="/category/addproduct" method="post">
 <div class="form-group">
     <input type="hidden" value="{{this._id}}" name="catid">
        <label for="name">Name:</label>
        <input type="text" class="form-control" name="pname" id="pname" value="">
    </div>
    <div class="form-group">
        <label for="name">Description:</label>
          <textarea class="form-control" name="pdescription" id="pdescription" value=""></textarea>
    </div>
    <button class="btn btn-primary">Add</button>
</form>


{{else}}
<h3>Edit Product</h3>

<form action="/category/updateproduct" method="post">
<input type="hidden" value="{{this.catid}}" name="catid">
<input type="hidden" value="{{this._id}}" name="productid">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" name="pname" id="pname" value="{{this.pname}}">
    </div>
    <div class="form-group">
        <label for="name">Description:</label>
        <textarea class="form-control" name="pdescription" id="pdescription" value="">{{this.pdescription}}</textarea>
    </div>
    <button class="btn btn-primary">Update</button>
</form>
{{/if}}
</div>
{{/each}}